            <aside class="col col-lg-8 mb-4 mb-lg-0">
              <div class="row w-100" style="gap: 2rem;">
                <div class="row hh w-100" style="gap: 2rem;">
                  <% if(locals.adress) {%>
                  <%adress.address.forEach((e,i)=>{ %>
                    <div class="col-sm-5 mb-3 mb-sm-0" id="card<%= e._id %>">
                      <div class="card" style="border: .1rem solid #ebebeb !important; border-radius: 10px;">
                        <div class="card-body">
                          <div class="hedaer  d-flex align-items-center  justify-content-between w-100 ms-4   ">
                            <label class="">
                              
                              <input style="margin-top: -.5rem; cursor: pointer;" type="checkbox" name="group1"
                                class="checkbox-group " <%= user.addressId+'hh' == e._id+'hh' ? 'checked' : '' %> onchange="change('<%= e._id %>','<%= locals.login%>')">
                            </label>
                            <h5 class="card-title text-center mb-2">
                              <%= e.name %>
                            </h5>
                            <h5 style="margin-top: -.5rem; cursor: pointer;"
                              onclick="dele('<%= e._id %>','<%=adress.userId%>')"><i
